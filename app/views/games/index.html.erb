<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 100vh; gap: 5px; text-align: center;">
  <h2>Snake Game</h2>
  <canvas id="gameCanvas" width="400" height="400" style="border:1px solid #000;"></canvas>
  <button id="restartButton" style="margin-top: 10px; padding: 8px 16px;">Restart</button>
  <p id="scoreDisplay">Score: 0</p>
  <p id="gameMessage" style="font-weight: bold; margin-top: 10px;"></p>
  <h3>Top Scores</h3>
  <ul id="leaderboard" style="list-style-type: none; padding: 0;">
    <% @top_scores.each do |g| %>
      <li><%= g.score %></li>
    <% end %>
  </ul>
  <%= javascript_include_tag "snake" %>
</div>
